<ComboBox xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Common.Avalonia.Control.MultiSelectControl">
	<ComboBox.ItemTemplate>
		<DataTemplate>
			<StackPanel Orientation="Horizontal">
				<CheckBox IsChecked="{Binding IsChecked}" Command="{Binding CheckChangedCommand}" CommandParameter="{Binding ., RelativeSource={RelativeSource Self}}"/>
				<MultiSelectControl Name="ComboBoxItem" Content="{Binding Text}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
			</StackPanel>
		</DataTemplate>
	</ComboBox.ItemTemplate>
</ComboBox>
