<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:sp="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Common.Avalonia.Plot.ScatterPlot"
			 x:Name="ScatterPlot">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<sp:AvaPlot x:Name="AvaScatterPlot" Grid.Row="0"/>
		<TextBlock DataContext="{Binding ElementName=ScatterPlot}" Text="{Binding ErrorText}" Foreground="Red" Grid.Row="1"/>
	</Grid>
</UserControl>
